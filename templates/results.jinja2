{% extends 'base.jinja2' %}

{% block title %}
{{ title }} {% if no_res %}<span class="no_res">{{ no_res }} {% endif %}
{% endblock title %}

{% block content %}

<div class="results">

  <table>
    <tbody>
      <thead>
        <tr>
          <td> No. </td>
          <td> Source sentence </td>
          <td> Target sentence </td>
          <td> Source Term </td>
          <td> Expected Target Term </td>
        </tr>
      </thead>
      {% for result in results %}
      <tr>
        <td> {{ result[0] }} </td>
        <td> {{ result[1] }} </td>
        <td> {{ result[2] }} </td>
        <td> {{ result[3] }} </td>
        <td> {{ result[4] }} </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock content %}
