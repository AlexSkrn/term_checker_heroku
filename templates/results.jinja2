<html>
<body>
<nav>
  <a id="home" href="{{ url_for('home') }}">Return to empty form</a>
</nav>

<h1>{% block title %} {% endblock title %}</h1>

<div>
  <style>
    b {background-color: #ffffcc;}
    table, td {
      width: auto;
      padding: 10px;
      border: 0.5pt dashed black;
      text-align: left;
      vertical-align: top;
      border-collapse: collapse;
          }
    tr:hover {background-color: #f5f5f5;}
  </style>
  <table>
    <tbody>
      <thead>
        <tr>
          <td> No. </td>
          <td> Source sentence </td>
          <td> Target sentence </td>
          <td> Source Term </td>
          <td> Expected Target Term </td>
        </tr>
      </thead>
      {% for result in results %}
      <tr>
        <td> {{ result[0] }} </td>
        <td> {{ result[1] }} </td>
        <td> {{ result[2] }} </td>
        <td> {{ result[3] }} </td>
        <td> {{ result[4] }} </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
</body>
</html>
